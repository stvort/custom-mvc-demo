<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>My Web Application</display-name>

    <listener>
        <display-name>AppContextListener</display-name>
        <listener-class>ru.otus.controller.AppContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>ReportsRestController</servlet-name>
        <servlet-class>ru.otus.controller.ReportsRestController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AstrolabeRestController</servlet-name>
        <servlet-class>ru.otus.controller.AstrolabeRestController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SextantRestController</servlet-name>
        <servlet-class>ru.otus.controller.SextantRestController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ReportsRestController</servlet-name>
        <url-pattern>/api/reports</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AstrolabeRestController</servlet-name>
        <url-pattern>/api/astrolabe</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SextantRestController</servlet-name>
        <url-pattern>/api/sextant</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
